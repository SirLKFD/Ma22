@model TrainingViewModel

<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

@{
    var categories = ViewData["categories"] as List<TrainingCategoryViewModel>;
}

<div id="editTraining" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40 backdrop-blur-sm hidden">
    <div class="flex max-h-[800px] w-full max-w-3xl flex-col rounded-xl bg-[#640A16] text-white shadow-lg p-6">
        <div class="flex">
            <a onclick="closeEditTraining()" class="hover-pointer">
                <span class="material-symbols-outlined text-[50px]">arrow_circle_left</span>
            </a>
        </div>
        <div class="flex align-items-center justify-start w-full my-2">
            <h1 class="uppercase text-2xl font-weight-bold">Edit Training</h1>
        </div>
        <form asp-action="UpdateTraining" asp-controller="AdminTraining" method="post" enctype="multipart/form-data" class="flex flex-col gap-4">
            <input type="hidden" asp-for="Id" />
            <label for="CoverPictureEditTraining" class="flex flex-col items-center justify-center bg-white h-[125px] w-full rounded-xl cursor-pointer">
                <input type="file"
                       name="CoverPictureEditTraining"
                       id="CoverPictureEditTraining"
                       accept="image/*"
                       class="hidden" />
                <img id="CoverPictureEditTrainingPreview" alt="Cover Picture" class="w-full h-full object-cover rounded-xl hidden" />
                <span id="CoverPictureEditTrainingPlaceholder" class="material-symbols-outlined text-[50px] text-black">add_photo_alternate</span>
                <h1 id="CoverPictureEditTrainingText" class="text-black uppercase">Upload Cover Photo</h1>
            </label>
            <div class="flex flex-col gap-2">

                <div class="flex gap-4">

                    <div class="w-1/2">
                        <label asp-for="TrainingName" class="block text-sm font-medium text-white mb-2">Training Name</label>
                        <input asp-for="TrainingName" id="TrainingNamePreview" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black" />
                        <span asp-validation-for="TrainingName" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="w-1/2">
                        <label asp-for="CourseCode" class="block text-sm font-medium text-white mb-2">Course Code</label>
                        <input asp-for="CourseCode" id="CourseCodePreview" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black" />
                        <span asp-validation-for="CourseCode" class="text-red-500 text-sm"></span>
                    </div>
               
                </div>
                <div class="flex gap-4">

                    <div class="w-1/2">
                        <label class="block text-sm font-medium text-white mb-2">Category</label>
                        <select name="TrainingCategoryId" id="TrainingCategoryIdPreview" class="w-full px-2 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black">
                            <option value="" disabled>- Select Category -</option>
                            @foreach (var category in categories)
                            {
                                <option value="@category.Id">@category.CategoryName</option> 
                            }
                        </select>


                    </div>
                    <div class="w-1/2">
                        <label class="block text-sm font-medium text-white mb-2">Skill Level</label>
                        <select name="SkillLevel" id="SkillLevelPreview" class="w-full px-2 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black">
                            <option value="" disabled>- Select Skill Level -</option>
                            <option value="1">Beginner</option>
                            <option value="2">Intermediate</option>
                            <option value="3">Advanced</option>
                        </select>
                    </div>

                </div>
                <div class="">
                    <label asp-for="Description" class="block text-sm font-medium text-white mb-2">Description</label>
                    <textarea asp-for="Description" id="DescriptionPreview" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>
               
                <div class="w-full">
                        <label class="block text-sm font-medium text-white mb-2">Estimated Time to Complete</label>
                        <select name="Duration" id="DurationPreview" class="w-full px-2 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#EAC231] text-black">
                            <option value="" disabled>- Select Duration -</option>
                            <option value="1">1 week</option>
                            <option value="2">2 weeks</option>
                            <option value="3">3 weeks</option>
                            <option value="4">1 month</option>
                            <option value="5">2 months</option>
                            <option value="6">3 months</option>
                            <option value="7">4–6 months</option>
                            <option value="8">6–9 months</option>
                            <option value="9">9–12 months</option>
                            <option value="10">1 year</option>
                            <option value="11">More than 1 year</option>
                        </select>
                </div>
                <button class="bg-[#FFE9C6] w-2/3 text-black align-self-center py-2 rounded-xl font-weight-bold mt-2">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function openEditTraining(id, trainingName, trainingCategoryId, skillLevel, duration, courseCode, description, coverPicture) {
        document.getElementById('Id').value = id;
        document.getElementById('TrainingNamePreview').value = trainingName;
        document.getElementById('TrainingCategoryIdPreview').value = trainingCategoryId;
        document.getElementById('SkillLevelPreview').value = skillLevel;
        document.getElementById('DurationPreview').value = duration;
        document.getElementById('CourseCodePreview').value = courseCode;
        document.getElementById('DescriptionPreview').value = description;

         const imageElement = document.getElementById('CoverPictureEditTrainingPreview');
        const placeholderElement = document.getElementById('CoverPictureEditTrainingPlaceholder');
        const textElement = document.getElementById('CoverPictureEditTrainingText');
        
        if (coverPicture && coverPicture.trim() !== '' && coverPicture !== 'null') {
            // Show image, hide placeholder
            imageElement.src = coverPicture;
            imageElement.classList.remove('hidden');
            placeholderElement.classList.add('hidden');
            placeholderElement.classList.remove('material-symbols-outlined');
            textElement.classList.add('hidden');
        } else {
            // Show placeholder, hide image
            imageElement.classList.add('hidden');
            placeholderElement.classList.remove('hidden');
            placeholderElement.classList.add('material-symbols-outlined');
            textElement.classList.remove('hidden');
        }

         document.getElementById('editTraining').classList.remove('hidden');
    }

       
    // Show preview of uploaded image when a new file is selected in EditTraining modal
    document.getElementById('CoverPictureEditTraining').addEventListener('change', function() {
        const file = this.files[0];
        const imageElement = document.getElementById('CoverPictureEditTrainingPreview');
        const placeholderElement = document.getElementById('CoverPictureEditTrainingPlaceholder');
        const textElement = document.getElementById('CoverPictureEditTrainingText');
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imageElement.src = e.target.result;
                imageElement.classList.remove('hidden');
                placeholderElement.classList.add('hidden');
                placeholderElement.classList.remove('material-symbols-outlined');
                textElement.classList.add('hidden');
            };
            reader.readAsDataURL(file);
        } else {
            imageElement.classList.add('hidden');
            placeholderElement.classList.remove('hidden');
            placeholderElement.classList.add('material-symbols-outlined');
            textElement.classList.remove('hidden');
        }
    });
</script>