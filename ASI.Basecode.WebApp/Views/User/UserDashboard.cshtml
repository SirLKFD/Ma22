@model List<ASI.Basecode.Services.ServiceModels.TrainingViewModel>

@{
    ViewData["Title"] = "UserDashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="flex bg-[#fff] w-full max-h-xl items-center rounded-xl mb-20">
    <!-- Left Image -->
    <div class="w-[45%]">
        <img src="~/img/bg_3.png" alt="Learning Illustration" class="w-full h-auto object-contain" />
    </div>

    <!-- Right Text Content -->
    <div class="flex-1 pr-10">
        <div class="bg-[#640A16] text-white p-8 rounded-lg">
            <h1 class="uppercase text-7xl font-extrabold leading-tight">
                KNOWLEDGE FOR<br />
                EVERY JUAN
            </h1>
            <p class="text-lg mt-4">
                Your gateway to reliable and accessible, simplified knowledge.
            </p>
        </div>
    </div>
</div>

<div class="flex flex-col gap-10 mb-20">
    <h1 class="text-4xl font-weight-bold">About Us</h1>
    <div class="flex text-center bg-[#640A16] w-full text-white p-10 rounded-lg">
        <p class="text-lg">
            We are a knowledge-sharing platform dedicated to making complex topics simple and accessible.
            Our goal is to empower curious minds with clear, reliable, and easy-to-understand information
            across a wide range of subjects.
        </p>
    </div>
</div>

<div class="flex flex-col gap-2 mb-10">
    <h1 class="text-4xl font-weight-bold">Trainings to get you started</h1>
    <p>Learn new skills or improve existing ones at your own pace.</p>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
    @if (Model != null && Model.Any())
    {
        foreach (var training in Model.Take(6))
        {
            <div class="bg-white border border-gray-200 rounded-2xl shadow-md overflow-hidden outline outline-1 outline-black flex flex-col min-h-[400px]">
                <div class="h-[180px]">
                    <img class="w-full h-full object-cover outline outline-1 outline-black" src="@training.CoverPicture" alt="Cover Image" />
                </div>
                <div class="p-4 flex flex-col flex-grow">
                    <div class="flex justify-between items-center mb-2">
                        <h2 class="text-xl font-semibold text-gray-800">@training.TrainingName</h2>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-3">@training.Description</p>
                    <div class="flex justify-between items-end text-xs text-gray-500 mt-auto pt-4">
                        <div>
                            <p><strong>Modified:</strong> @training.UpdatedTime.ToString("MMM dd, yyyy")</p>
                            <p><strong>By:</strong> @training.AccountFirstName @training.AccountLastName</p>
                        </div>
                        <a href="@Url.Action("Topics","UserTopic", new { trainingId = training.Id })" class="bg-[#640A16] text-white font-weight-bold px-4 py-2 rounded-full text-xs hover:bg-[#4e0712] transition">
                            Access
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-span-3 text-center text-gray-500 py-8">No trainings found.</div>
    }
</div>

<div class="flex items-center justify-center">

    <a asp-controller="User" asp-action="BrowseTrainings" class="bg-[#640A16] px-16 py-2 text-white rounded-lg">
        Explore More
    </a>
</div>

<script>
    // You can add JS logic here if needed
</script>
