@model ASI.Basecode.Services.ServiceModels.UserListViewModel

<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

<div id="viewUserModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40 backdrop-blur-sm">
    <div class="relative flex h-[700px] w-full max-w-6xl flex-row rounded-xl bg-white shadow-lg">

        <!-- Left Panel -->
        <div class="flex w-[450px] flex-col items-center justify-center rounded-l-xl bg-[#640A16]">

            <!-- Back Button Only -->
            <div class="absolute left-5 top-5">
                <a href="javascript:void(0);" onclick="closeViewDetails()" class="hover-pointer">
                    <span class="material-symbols-outlined text-[50px] text-white">arrow_circle_left</span>
                </a>
            </div>

            <div class="mb-5 flex h-[250px] w-[250px] items-center justify-center rounded-full bg-[#FFE9C6]">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" alt="Profile" class="h-[250px] w-[250px] rounded-full object-cover" />
                }
                else
                {
                    <span class="text-6xl font-bold">👤</span>
                }
            </div>

            <div class="flex flex-col items-center gap-1">
                <h1 class="text-2xl uppercase text-white">@Model.FullName</h1>
                <h2 class="text-sm text-white">Email: @Model.EmailId</h2>
                <h2 class="text-sm text-white">Role: @(Model.Role == 0 ? "Admin" : "Guest")</h2>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex-1 p-5">
            <h2 class="mb-4 inline-block rounded-lg bg-[#EAC231] p-2 text-2xl font-bold uppercase">Profile Details</h2>

            <div class="mb-4 flex items-center gap-4">
                <h2 class="rounded-lg bg-[#640A16] p-2 text-sm font-bold uppercase text-white">First Name</h2>
                <h2 class="text-base font-medium text-black">@Model.FirstName</h2>
            </div>

            <div class="mb-4 flex items-center gap-4">
                <h2 class="rounded-lg bg-[#640A16] p-2 text-sm font-bold uppercase text-white">Last Name</h2>
                <h2 class="text-base font-medium text-black">@Model.LastName</h2>
            </div>

            <div class="mb-4 flex items-center gap-4">
                <h2 class="rounded-lg bg-[#640A16] p-2 text-sm font-bold uppercase text-white">Birthdate</h2>
                <h2 class="text-base font-medium text-black">
                    @(Model.Birthdate.HasValue? Model.Birthdate.Value.ToString("MMMM dd, yyyy") : "Data not set")
                </h2>
            </div>

            <div class="mb-4 flex items-center gap-4">
                <h2 class="rounded-lg bg-[#640A16] p-2 text-sm font-bold uppercase text-white">Contact</h2>
                <h2 class="text-base font-medium text-black">
                    @(string.IsNullOrEmpty(Model.Contact) ? "Data not set" : Model.Contact)
                </h2>
            </div>

            <div class="mb-4 flex items-center gap-4">
                <h2 class="rounded-lg bg-[#640A16] p-2 text-sm font-bold uppercase text-white">Account Created</h2>
                <h2 class="text-base font-medium text-black">
                    @(Model.CreatedTime == DateTime.MinValue ? "Data not set" : Model.CreatedTime.ToString("MMMM dd, yyyy"))
                </h2>
            </div>
        </div>
    </div>
</div>
