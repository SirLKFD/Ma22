@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="login-container">
    <!-- Left Side: Full Image Background -->
    <div class="login-image-container">
        <img src="~/img/loginPicture.png" alt="Illustration" class="login-image">
    </div>

    <!-- Right-aligned Login Card -->
    <div class="login-content">
        <div class="login-card">
            <!-- Logo in top-right corner -->
            <div class="logo-container">
                <img src="~/img/Logo.png" alt="logo" class="logo">
            </div>

            <!-- Welcome text and Login heading -->
            <p class="welcome-back">Welcome back!</p>
            <h2 class="login-heading">Login</h2>

            <form method="post" action="/Account/Login" id="loginForm">
                <div class="form-group">
                    <label for="form2Example11">@UserId</label>
                    <input type="text" id="form2Example11" class="form-input" asp-for="UserId" placeholder="Username or email address" />
                    <span asp-validation-for="UserId" class="validation-error"></span>
                </div>

                <div class="form-group password-group">
                    <label for="form2Example22">@Password</label>
                    <input type="password" id="form2Example22" class="form-input" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <div class="button-section">
                    <button class="login-button" type="submit">
                        @Login
                    </button>
                    <div>
                        <a class="forgot-password" href="#">@ForgotPass</a>
                    </div>
                </div>

                <div class="signup-group">
                    <p>@DontHaveAcc</p>
                    <a asp-controller="Account" asp-action="Register" class="signup-button">
                        @CreateNew
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}