<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />


@model ASI.Basecode.Services.ServiceModels.AdminCreateUserViewModel
@{
    ViewData["Title"] = "Delete User Modal Page";
}

<div id="deleteUserModal" class="fixed inset-0 bg-black bg-opacity-40 backdrop-blur-sm flex justify-center items-center hidden z-50">

    <div class="flex flex-row bg-[#640A16] rounded-xl w-[1152px] h-[700px] shadow-lg relative">
        <div class="absolute left-5 top-5">
            <a onclick="closeDeleteProfile()" class="hover-pointer">
                <span class="material-symbols-outlined text-[50px] text-white">arrow_circle_left</span>
            </a>
        </div>
        <div class="flex flex-col items-center mt-24 w-full ">
            <h1 class="text-white text-4xl mb-5">
                Are you sure you want to delete this User?
            </h1>
            <div class="w-[200px] h-[200px] bg-[#FFE9C6] rounded-full mb-4 ">
            </div>
            <div class="flex flex-col justify-center items-center mb-4 gap-2">
                <h2 class="text-white text-2xl">NamePlacehlder</h2>
                <h2 class="text-white">ID PLaceholder</h2>
            </div>
            <div class="flex flex-col gap-2">
                <button class="bg-[#EAC231] px-[200px] py-2 rounded-lg">
                    Confirm
                </button>
                <button onclick="closeDeleteProfile()"class="bg-[#FFE9C6] px-[200px] py-2 rounded-lg">
                    Cancel
                </button>
            </div>
        </div>



    </div>


</div>