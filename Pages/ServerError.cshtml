@page
@model ServerErrorModel
@{
    ViewData["Title"] = "Database Server Error";
}

<div class="container mt-5 text-center">
    <div class="alert alert-danger">
        <h1><i class="fas fa-database"></i> Database Server Error</h1>
        <h3>We're currently experiencing database connectivity issues.</h3>
        <p>Our technical team has been notified and is working to resolve this issue.</p>
        <p>Please try again later.</p>
    </div>
    <a href="/" class="btn btn-primary mt-3">Return to Home Page</a>
</div>