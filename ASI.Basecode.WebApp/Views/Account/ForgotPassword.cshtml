@using ASI.Basecode.WebApp.Models
@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Forgot Password";
    bool hasEmail = !string.IsNullOrEmpty(Model?.EmailId);
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="login-container">
    <!-- Left Side: Full Image Background -->
    <div class="login-image-container">
        <img src="~/img/loginPicture.png" alt="Illustration" class="login-image">
    </div>
    <!-- Right-aligned Forgot Password Card -->
    <div class="login-content">
        <div class="login-card">
            <!-- Logo in top-right corner -->
            <div class="logo-container">
                <img src="~/img/Logo.png" alt="logo" class="logo">
            </div>
            <!-- Forgot Password heading and conditional message -->
            <h2 class="login-heading">Forgot Password?</h2>

            @if (hasEmail)
            {
                <p class="forgot-password-message success-message">No worries, we sent you a reset link in your email.</p>
                <div class="email-display">
                    <p class="sent-to-email">Reset link sent to: <strong>@Model.EmailId</strong></p>
                </div>
               
            }
            else
            {
                <p class="forgot-password-message">Enter your email address and we'll send you a reset link.</p>
                <form method="post" action="/Account/ForgotPassword" id="forgotPasswordForm">
                    <div class="form-group">
                        <label for="emailInput">Email Address</label>
                        <input type="email" id="emailInput" class="form-input" asp-for="EmailId" placeholder="Enter your email address" />
                        <span asp-validation-for="EmailId" class="validation-error"></span>
                    </div>
                    <div class="button-section">
                        <button class="login-button" type="submit">
                            Send Reset Link
                        </button>
                    </div>
                </form>
            }

            <div class="signup-group">
                <p>Remember your password?</p>
                <a asp-controller="Account" asp-action="Login" class="signup-button">
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>


<!-- PUT THIS IN EXTERNAL CSS LATER -->

<style>
    .forgot-password-message {
        color: #6b7280;
        font-size: 14px;
        margin-bottom: 24px;
        text-align: center;
        line-height: 1.5;
    }

    .success-message {
        color: #059669;
        font-weight: 500;
    }

    .email-display {
        background-color: #f0f9ff;
        border: 1px solid #0ea5e9;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 24px;
        text-align: center;
    }

    .sent-to-email {
        color: #0c4a6e;
        font-size: 14px;
        margin: 0;
    }

    .login-heading {
        margin-bottom: 8px;
    }
</style>

@section scripts {
    <script>
        // Check for success message and display Toastr notification
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            toastr.success(successMessage);
        }

        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}