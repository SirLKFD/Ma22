@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Layout = null;
    ViewData["Title"] = "Ma22";
}
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

<div class="flex h-screen flex-col gap-20 bg-white p-20">

    <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
            <img src="/img/Logo.png" class="h-[50px] w-[50px]"/>
            <div class="flex flex-col">
                <h1 class="text-2xl font-bold">Ma22</h1>
                <p class="text-sm">Clear. Reliable. Easy to Understand.</p>
            </div>

        </div>
        <div class="flex items-center gap-20">
            <a onclick="scrollToHome()" class="hover-pointer">
                Home
            </a>
            <a onclick="scrollToProduct()" class="hover-pointer" >
                Product
            </a>
            <a onclick="scrollToTestimonials()" class="hover-pointer">
                Testimonials
            </a>
            <a href="@Url.Action("Login", "Account")" class="rounded-lg bg-[#640A16] p-2 text-white" >
                Log In
            </a>
        </div>

    </div>

    <div id="target-section-home" class="flex w-full justify-center space-x-10">
        <div class="flex w-fit items-center justify-center">
            <div class="flex flex-col gap-5">
                <h1 class="text-6xl font-bold">
                    Clear. Reliable.<br />
                    Easy to Understand.
                </h1>
                <p class="text-lg font-semibold text-gray-500">
                    Your gateway to reliable and
                    accessible, simplified knowledge
                </p>
                <a asp-controller="Account" asp-action="Register" class="w-fit rounded-lg bg-[#640A16] p-2 text-white">
                    Get Started
                </a>
            </div>
        </div>
        <img src="~/img/bg_5.png" class="w-[35%]" />
    </div>
</div>




<div id ="target-section-product" class="flex flex-col p-20">

    <div class="mb-5 flex flex-col items-center justify-center">
        
        <div class="flex flex-col gap-2">

            <h2 class="text-center text-5xl font-bold">
                What we Offer
            </h2>
            <p class="text-center text-sm">We offer a platform for dedicated individuals to hone their skills <br /> and knowledge.</p>
        </div>
        
    </div>
    <div class="flex items-stretch justify-center gap-10">
        <div class="flex w-1/4 flex-col items-center justify-center gap-5 rounded-xl bg-white p-4 transition duration-300 hover:scale-105" >
            <img src="~/img/bg_4.png" class="w-[50%]"/>
            <p class="text-xl font-bold">
                Trainings that Work
            </p>
            <p class="text-center text-sm">We offer trainings that work by delivering practical, engaging sessions designed to build real-world skills. </p>
        </div>
        <div class="flex w-1/4 flex-col items-center justify-center gap-5 rounded-xl bg-white p-4 transition duration-300 hover:scale-105">
            <img src="~/img/bg_2.png" class="w-[70%]" />
            <p class="text-xl font-bold">
                In-Depth Teaching of Topics
            </p>
            <p class="text-center text-sm">We break down complex ideas into practical lessons that learners can easily understand and apply.</p>
        </div>
        <div class="flex w-1/4 flex-col items-center gap-5 rounded-xl bg-white p-4 transition duration-300 hover:scale-105">
            <img src="~/img/bg_1.png" class="w-[70%]" />
            <p class="text-xl font-bold">
                Comprehensive Content
            </p>
            <p class="text-center text-sm">We offer comprehensive content that includes not only videos but also documents and images to help you learn more effectively.</p>
        </div>
    </div>
</div>

<div id="target-section-testimonials" class="flex flex-col bg-white p-20">

    <div class="mb-5 flex flex-col items-center">

        <div class="flex flex-col gap-2">

            <h2 class="text-5xl font-bold">
                What our Users Say
            </h2>
            
        </div>

    </div>
    <div class="flex items-stretch justify-center gap-10">
        <div class="flex h-[400px] w-1/4 flex-col rounded-xl border-2 border-black">
            <span class="material-symbols-outlined rounded-tl-lg rounded-tr-lg border-b-2 border-black bg-[#EAC231] px-4 !text-[40px]">more_horiz</span>
            <p class="p-4 text-sm">“I'm a testimonial. Click to edit me and add text that says something nice about you and your services. Let your customers review you and tell their friends how great you are.”</p>
        </div>
        <div class="flex h-[400px] w-1/4 flex-col rounded-xl border-2 border-black">
            <span class="material-symbols-outlined rounded-tl-lg rounded-tr-lg border-b-2 border-black bg-[#EAC231] px-4 !text-[40px]">more_horiz</span>
            <p class="p-4 text-sm">“I'm a testimonial. Click to edit me and add text that says something nice about you and your services. Let your customers review you and tell their friends how great you are.”</p>
        </div>
        <div class="flex h-[400px] w-1/4 flex-col rounded-xl border-2 border-black">
            <span class="material-symbols-outlined rounded-tl-lg rounded-tr-lg border-b-2 border-black bg-[#EAC231] px-4 !text-[40px]">more_horiz</span>
            <p class="p-4 text-sm">“I'm a testimonial. Click to edit me and add text that says something nice about you and your services. Let your customers review you and tell their friends how great you are.”</p>
        </div>
    </div>
</div>

<div class="flex flex-col items-center justify-center gap-10 p-20">
    <div class="flex text-center">
        <h1 class="text-5xl font-bold">Unlock Your Potential and Elevate Your Knowledge With Our Learning Hub</h1>
    </div>
    <a asp-controller="Account" asp-action="Register" class="rounded-lg bg-[#640A16] px-4 py-2 text-white">
        Get Started
    </a>
    <img src="/img/bg_8.png" class="w-[50%]"/>

</div>

<script>
    function scrollToProduct() {
          document.getElementById("target-section-product").scrollIntoView({
            behavior: "smooth"
          });
    }

        function scrollToHome() {
          document.getElementById("target-section-home").scrollIntoView({
            behavior: "smooth"
          });
    }

        function scrollToTestimonials() {
          document.getElementById("target-section-testimonials").scrollIntoView({
            behavior: "smooth"
          });
    }
</script>
